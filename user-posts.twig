{{ set(this, 'title', 'User Profile') }}
{% set networkData   = _Network.getNetworkData() %}

{% set profileImage =_Media.getMediaUrl(user.media, 500, 500, {radius: 'max', crop: 'thumb', gravity: 'face', type:'user'} )%}

{{this.registerJs("Acme.cards = CardController();")}}

<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = 0 %}

{% set limit = 20 %}


{% set firstCount = userArticles | length %}
                                                     {# renders the card    fetch-limit      fetch-offset    infinite scroll #}
                                                     {#            ↑           ↑                 ↑            ↑            #}
{{this.registerJs("Acme.loadMore = new Acme.View.articleFeed(Acme.cards, " ~ limit ~ ", " ~ firstCount ~ ", false);")}}


<section class="container min-hight">
    <div class="row" id="userprofile-page">
        <div class="col-sm-12">

            <div class="author-profile">
                <img src="{{profileImage}}" class="author-profile__image img-responsive">
                
                <div class="inner-descr">
                    <h4 class="user-name author-profile__user-name">{{Html.encode(user.firstname)}} {{Html.encode(user.lastname)}}</h4>

                    <a class="mail-icon author-profile__mail-icon" href="mailto:{{user.email}}"></a>


                    <p class="author-profile__text">{{Html.decode(user.bio) | raw}}</p>
                    
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12">
            <div id="userArticleContainer" class="row" data-total-count="{{totalArticles}}" data-offset="0">


                {% for i in 0..19 %}
                    {% if userArticles[i] %}                                                                
                        {{this.render('partials/_single-article.twig', {
                            article: userArticles[articleCount], 
                            position: (articleCount+1), 
                            containerClass: 'col-sm-6 col-md-3 card-vr userpost', 
                            imageSize: {width:360, height:215}
                        }) | raw}}
                        {% set articleCount = articleCount + 1 %}
                    {% endif %}
                {% endfor %}

            </div>
            


            {% if totalArticles >= limit %}
                {{ this.render('partials/ajaxarticles_new.twig', {
                    name            : "section-load",
                    limit           : limit,
                    offset          : limit,
                    label           : "Load more",
                    loadtype        : "user_articles",
                    imgwidth        : "220",
                    imgheight       : "208",
                    container       : "mainAjaxArticles",
                    non_pinned      : articlesArr.existingNonPinnedCount, 
                    card_class      : "col-sm-3 card-vr",
                    buttonClass     : "loadMoreArticles",
                }) | raw }}
            {% endif %}

        </div>


    </div>
</section>