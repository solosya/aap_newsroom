{% set networkData  = _Network.getNetworkData() %}
{% set blogData     = _Blog.getBlog() %}
{% set config       = _Network.getThemeConfig() %}
{{ set(this, 'title', blogData.title) }}
{{this.registerJs("Acme.cards = CardController();")}}

{% set sections =  {
        "podcast: the detail": {
            "feed": "",
            "link": "",
            "description": "",
            "title": ""
        }, 
        "podcast: two cents' worth": {
            "feed": "",
            "link": "",
            "description": "",
            "title": ""
        }, 
        "podcast: book bubble": {
            "feed": "",
            "link": "",
            "description": "",
            "title": ""
        }
    }
%}

{% set limit = 4 %}


{% for key, value in sections %}
    {% for blog in networkData.networkBlogs %}
        {% if blog.title | lower == key %}
            {% set sections = sections | merge({
                (key) : {
                    'feed': _Blog.getBlogFeed({'limit': 4, 'offset': 0, 'blogid':blog.guid}),
                    'link' : blog.link,
                    'description'   : blog.short_description,
                    'title'         : blog.title,
                    'blogguid'      : blog.guid,
                    'blogid'        : blog.id
                    }
                }) %}
        {% endif %}
    {% endfor %}
{% endfor %}

{# {{_AppHelper.printArray(sections)}} #}


<main id="main" class="site-main u-margin-top-40" role="main">
    <div class="container">
        <h1 class="sectionpage u-mobile-margin-left-20">{{blogData.title}}</h1>
        <div class="row">
            <div class="col-md-12 col-lg-8 partials-block">

                {% if sections['podcast: the detail'].feed.articles|length > 0 %}
                    {{this.render('render.twig', {
                        'section' : 'podcast: the detail',
                        'blogFeeds' : sections,
                        'template' : 'partials/pro/hero-four-dark.twig',
                        'title' : 'podcast: the detail'
                    }) | raw}}
                {% endif %}

                {% if sections['podcast: book bubble'].feed.articles|length > 0 %}
                    {{this.render('render.twig', {
                        'section' : 'podcast: book bubble',
                        'blogFeeds' : sections,
                        'template' : 'partials/pro/hero-four-light.twig',
                        'title' : 'podcast: the detail'
                    }) | raw}}
                {% endif %}

                {% if sections["podcast: two cents' worth"].feed.articles|length > 0 %}
                    {{this.render('render.twig', {
                        'section' : "podcast: two cents' worth",
                        'blogFeeds' : sections,
                        'template' : 'partials/pro/hero-four-dark.twig',
                        'title' : "podcast: two cents' worth"
                    }) | raw}}
                {% endif %}
                
                
            </div>
            <div class="col-md-12 col-lg-4">
                <section class="ad sidebar-ad ">
                    {% if config['inventory']['adSpace']['hpage'][0] is defined %}
                        <div class="j-adslot" id="{{config['inventory']['adSpace']['hpage'][0]}}" data-adshape="hpage" data-responsive="1"></div>
                    {% endif %}
                    {# <span class="ad-text d-print-none" style="display:block;width:300px;margin:0 auto;padding-left:17px;">Advertisement</span> #}
                </section>
            </div>
        </div>
    </div>
    <div class="j-keyword-cont" data-keywords="{{blogData.keywords}}" data-pageName="podcasts" data-pageType="section" data-pageTags=""></div>
</main>


 <script>

        
        // main script is defered so event listener makes sure
        // defered script is loaded before this runs
        document.addEventListener("DOMContentLoaded", function() {
            jQuery( function() {
                //remove loadmore from all the loadmore boxes or the script gets confused
                $('.loadMore').removeClass('loadMore');
                //replace the default click with one that selects the box
                $('.j-pro-loadmore').click( function(e){
                    e.preventDefault();
                    //make sure the loaded boxes and the show less are showing 
                    $(this).parent().children('div').removeClass('hidden');
                    //set the clicked box to be the active loadmore one
                    $(this).addClass('loadMore');
                    //generate a new feed for the active box and fetch it
                    Acme.loadMore = new Acme.View.articleFeed(Acme.cards, 6, 4, false);
                    Acme.loadMore.fetch();
                    //clear the feed so no overlap
                    Acme.loadMore = "";
                    //remove loadmore from the active box so further scripts dont get confused
                    $('.loadMore').removeClass('loadMore');
                });
                $('.j-pro-loadless').click( function(e) {
                    e.preventDefault();
                    //hide  or show the load more buttons and loaded-more articles
                    this.id = "j-active";
                    if ($('#j-active').text() == '- SHOW LESS') {
                        $('#j-active').parent().children('.row').removeClass('hidden');
                        $('#j-active').parent().children('.row').addClass('hidden');
                        $('#j-active').parent().children('a').addClass('hidden');
                        $('#j-active').text('+ SHOW MORE');
                    } else {
                        $('#j-active').parent().children('.row').removeClass('hidden');
                        $('#j-active').parent().children('a').removeClass('hidden');
                        $('#j-active').text('- SHOW LESS');
                    }
                    $(this).removeAttr('id');
                });

                
            });
            
        });
    </script>
