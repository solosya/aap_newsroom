{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set blogData      = _Blog.getBlog() %}
{% set blogName      = blogData.title %}
{% set config       = _Network.getThemeConfig() %}

{% set limit = 13 %}

{% set recentPanelBlogName = "Newsroom" %}
{% set recentParams = {'limit': 4} %}

{% if blogName | lower == 'sportsroom' or blogName | lower == 'lockerroom'%}                                                                
    {% set recentPanelBlogName = blogName %}
    {% set recentParams = recentParams | merge({
        'blogId': blogData['id'],
    }) %}
{% else %}

    {% set recentParams = recentParams | merge({
        'scope': 'network',
    }) %}

{% endif %}



{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set firstCount = articles | length %}



{% set recentArticles = _Article.getRecentArticles(recentParams) %}

<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = 0 %}

    
    <main id="main" class="site-main roompage investigations u-margin-top-40" role="main">
        <a class="d-block d-md-none" href="{{roomInfo[1]}}" rel="Home" tabindex="-1" title="Home" style="float:none;height:50px;margin-top:-15px;">
            <img src="{{networkData.templatePath}}/static/images/investigations-logo.svg" alt="logo" class="main-logo" style="height:30px;margin-left:20px;">        
        </a>
        <section class="featured-slider container-fluid">

            <div class="investigations-before">

                {% if articles[0] %}                                                                
                    {{this.render('partials/_single-article.twig', {
                        article: articles[0], 
                        position: 1, 
                        containerClass: 'card-investigations-feature card-investigations-feature-tablet card-investigations-feature-mobile',
                        imageSize: {width:1168, height:587}
                    }) | raw}}
                    {% set articleCount = articleCount + 1 %}
                {% endif %}
            </div>

        </section>
    
        {% if articles[articleCount] %}                                                                
        <section class="top-stories">
            <div class="container">
                <div class="row">
                    {% set marginclass = ['',' u-tablet-no-margin-bottom'] %}
                    {% for i in 0..1 %}
                        {% if articles[i] %}                                                                
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: (articleCount+1), 
                                containerClass: 'col-12 col-lg-6 card-top-story card-rec-tablet card-top-story-mobile room' ~ marginclass[i],
                                imageSize: {width:203, height:130}
                            }) | raw}}
                            {% set articleCount = articleCount + 1 %}
                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </section>
        {% endif %}



        <section class="home-page-content">
            <div class="container">
                <div class="row">

                    <div class="col-md-12 col-lg-8">
                        <div class="card-group {{articles[articlecount]}}">
                            {% if articles[articleCount] %}                                                                

                                {% for i in 0..4 %}
                                    {% if articles[articleCount] %}                                                                
                                        {{this.render('partials/_single-article.twig', {
                                            article: articles[articleCount], 
                                            position: (articleCount+1), 
                                            containerClass: 'card-investigations-rec card-investigations-rec-tablet card-investigations-rec-mobile',
                                            imageSize: {width:330, height:236}
                                        }) | raw}}
                                        {% set articleCount = articleCount + 1 %}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}

                         </div>
                    </div>

                    <div class="col-12 col-lg-4 sidebar">
                        
                        <div class="row">
                            <section class="col-md-6 col-lg-12 ad sidebar-ad">
                                {% if config['inventory']['adSpace']['hpage'][0] is defined %}
                                    <div class="j-adslot" id="{{config['inventory']['adSpace']['hpage'][0]}}" data-adshape="hpage" data-responsive="1"></div>
                                {% endif %}
                                {# <span class="ad-text">Advertisement</span> #}
                            </section>



                        <section class="col-12 sidebar-news recent-articles">
                            <h3 class="recent-articles__header">
                                <span class="recent-articles__header-bold">Latest</span> on {{recentPanelBlogName}} 
                            </h3>

                            {% if recentArticles|length > 0 %}

                                {% for i in 0..5 %}
                                    {% if recentArticles[i] %}
                                        {{
                                            this.render('partials/_single-article_recent.twig', {
                                                article: recentArticles[i], 
                                                containerClass: '', 
                                                swap: 'false', 
                                                isArticle: 'true'}) | raw
                                        }}
                                    {% endif %}
                                {% endfor %}

                            {% endif %}

                        </section>
                            {% if articles[articleCount] %}                                                               
                                <section class="col-12 "> 
                                        {{this.render('partials/_single-article.twig', {
                                            article: articles[articleCount], 
                                            position: (articleCount+1), 
                                            containerClass: 'card-sm card-rec-inverted-tablet card-sm-mobile u-no-border-bottom',
                                            imageSize: {width:335, height:260}
                                        }) | raw}}
                                        {% set articleCount = articleCount + 1 %}
                                </section>
                            {% endif %}
                        </div> 
                    </div>

                </div>


                {% if articles[articleCount] %}                                                                
                <div class="row bottom-row">
                    {% for i in 0..3 %}
                        {% if articles[articleCount] %}                                                                
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: (articleCount+1), 
                                containerClass: 'col-md-6 col-lg-3 card-sm card-sm-tablet card-sm-mobile',
                                imageSize: {width:255, height:208}
                            }) | raw}}
                            {% set articleCount = articleCount + 1 %}
                        {% endif %}
                    {% endfor %}
                </div>
                {% endif %}




                <section class="row" id="loadmore_section" class="loadmore__section {{site}}"></section>
                
                <section class="loadmore__section {{site}}">
                    {# {% if articles|length >= limit %} #}
                        {{ this.render('/partials/load_more.twig', {
                            name            : "section-load",
                            label           : "Load more",
                            buttonClass     : "loadMoreArticles",
                        }) | raw }}
                    {# {% endif %} #}
                </section>


            {# {% if articles|length >= limit %}
                {{ this.render('partials/ajaxarticles_new.twig', {
                    name            : "section-load",
                    limit           : limit,
                    offset          : limit,
                    label           : "Load more",
                    imgwidth        : "262",
                    imgheight       : "208",
                    container       : "mainAjaxArticles",
                    non_pinned      : articlesArr.existingNonPinnedCount, 
                    card_class      : "col-md-4 col-lg-3 card-sm card-sm-tablet card-sm-mobile",
                    buttonClass     : "loadMoreArticles"
                }) | raw }}
            {% endif %} #}

            </div>
        </section>
        <div id="ad-keywords" class="j-keyword-cont" data-keywords="{{blogData.keywords}}" data-pageName="section" data-pageType="investigations" data-pageTags=""></div>
    </main>



<script>
    document.addEventListener("DOMContentLoaded", function(event) {
        const events = new Acme.Card();

        Acme.loadMore = new Acme.ArticleFeed({
            model           : Acme.Card,
            container       : 'loadmore_section',
            offset          : {{limit}},
            limit           : 12,
            label           : "Load more",
            name            : 'section-load',
            blogid          : "{{ blogData['guid'] }}",
            card_class      : 'col-md-4 col-lg-3 card-sm card-sm-tablet card-sm-mobile',
            non_pinned      : "{{ articlesArr.existingNonPinnedCount }}"
        });
    });
</script>
