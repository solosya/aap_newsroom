    document.addEventListener("DOMContentLoaded", function(event) {
        var hiddenWriters = $('#hidden-writers');

        $('#viewall').on('click', function(e) {
            $this = $(this);
            if ($this.text().trim() === "View all") {
                $this.text("View less");
            } else {
                $this.text("View all");
            }
            hiddenWriters.toggleClass('u-hide');
        });


        $('.faq__button').on('click', function(e) {

            close = true;
            var box = $(e.target).closest('div.faq__question-box');
            if (box.hasClass('faq__question-box--open')) {
                close = false;
            }


            var boxes = $('div.faq__question-box');
            boxes.removeClass('faq__question-box--open');

            var questions = $('.faq__question');
            questions.removeClass('faq__question--open');

            var answers = $('.faq__answer-container');
            answers.addClass('u-hide').removeClass('faq__answer-container--open');
            
            var arrows = $('.faq__arrow-container');
            arrows.removeClass('faq__arrow-container--up');

            var question = box.find('.faq__question');
            var clickedArrow = box.find('.faq__arrow-container');
            var clickedAnswer = box.find('.faq__answer-container');

            if (close) {
                box.addClass('faq__question-box--open');
                question.addClass('faq__question--open');
                clickedAnswer.removeClass('u-hide').addClass('faq__answer-container--open');
                clickedArrow.addClass('faq__arrow-container--up');
            }

        });

  


        const DonateTabs = function() {
            this.tab = 'donate';
            this.donateButton = document.getElementById("donate-tab");
            this.subscribeButton = document.getElementById("subscribe-tab");
            this.donatePane = document.getElementById("donate-pane");
            this.subscribePane = document.getElementById("subscribe-pane");
            this.events();
        };
        DonateTabs.prototype.events = function() {
            var self = this;
            this.donateButton.addEventListener('click', function(e) {
                e.preventDefault();
                if (self.tab === 'donate') return;
                self.tab = 'donate';
                this.classList.add('active');
                self.subscribeButton.classList.remove('active');
                self.donatePane.classList.add('active');
                self.subscribePane.classList.remove('active');
            });
            this.subscribeButton.addEventListener('click', function(e) {
                e.preventDefault();
                if (self.tab === 'subscribe') return;
                self.tab = 'subscribe';
                this.classList.add('active');
                self.donateButton.classList.remove('active');
                self.subscribePane.classList.add('active');
                self.donatePane.classList.remove('active');
            });
        };

        const tabber = new DonateTabs();





    });
