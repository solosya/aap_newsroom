{% set networkData = _Network.getNetworkData() %}
{% set plans = _Paywall.getActiveNetworkPaywallPlans() %}
{% set config = _Network.getThemeConfig() %}

{% set signupurl = '/subscribeform' %}
{% set specialPlans = [] %}
{% for plan in plans %}
    {% if "!*!" in plan.description %}
        {% set description = plan.description | split("!*!") %}
        {% set data = _AppHelper.jsonDecode( description[0] ) %}
        {% if data['donatepage'] is defined and data['donatepage'] == true %}
            {% set save = data['save'] is defined ? data['save'] : false %}
            {% set plan = plan | merge({"saving" : save}) %}
            {% set specialPlans = specialPlans | merge ([plan]) %}
        {% endif %}

    {% endif %} 
{% endfor %}




{% set donations = "nr" %}
{% if config.donations is defined %}
    {% if config.donations != "nr" %}
        {% set donations = config.donations %}
    {% endif %}
    
