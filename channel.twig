{% set networkData = _Network.getNetworkData() %}

{% set blogInfo = _Blog.getBlog() %}
{{ set(this, 'title', blogInfo.title) }}


{{this.registerJs("HomeController.listing();")}}
{{this.registerJs("HomeController.blog();")}}

{% set limit = 20 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}


{% set status = 'follow' %}
{% set text = 'Follow +' %}
{% if not _User.isGuset() and _User.isUserFollowing('blog', article.blog['id'])%}
    {% set status = 'unfollow' %}
    {% set text = 'Following -' %}
{% endif %}




<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = 0 %}


        <section class="featured-slider channel container-fluid">
            <div class="container">
                <div class="swiper-container">
                    <div class="swiper-wrapper">

                        {% if articles[0] %}                                                                
                            {{this.render('partials/_single-article.twig', {article: articles[0], position: 1, containerClass: 'swiper-slide s660x440'}) | raw}}
                            {% set articleCount = articleCount + 1 %}
                        {% endif %}
                    </div><!-- .swiper-wrapper-->

                </div><!-- .swiper-container-->
            </div>
        </section><!-- .featured-slider-->
    

        <section class="home-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-8">
                        <div class="card-group">
                            {% if articles[articleCount] %}                                                                
                                {{this.render('partials/_single-article.twig', {article: articles[articleCount], position: (articleCount+1), containerClass: 'card-rec inverted'}) | raw}}
                                {% set articleCount = articleCount + 1 %}
                            {% endif %}

                         </div><!--card-group-->

                        <div class="row">
                            <div class="card-group">
                               
                            {% for i in 0..2 %}
                                {% if articles[i] %}                                                                
                                    {{this.render('partials/_single-article.twig', {article: articles[articleCount], position: (articleCount+1), containerClass: 'col-sm-4 card-sm s230x206'}) | raw}}
                                    {% set articleCount = articleCount + 1 %}
                                {% endif %}
                            {% endfor %}

                            </div><!-- .card-group-->
                        </div><!-- .row-->

                    </div><!-- .col-sm-8-->

                    <div class="col-sm-12 col-md-4 sidebar">
                        <section class="add sidebar-add" style="background:orange">
                            <div class="block hidden-xs">
                                <a href="#">
                                    <img src="{{networkData.templatePath}}/static/images/add-lg-rec.jpg" alt="Add Alt Here">
                                </a>
                                <span class="add-text">Advertisement</span>
                            </div><!--block-->

                            <div class="block visible-xs-block">
                                <a href="#">
                                    <img src="{{networkData.templatePath}}/static/images/add-mobile.jpg" alt="Add Alt Here">
                                </a>
                                <span class="add-text">Advertisement</span>
                            </div><!--block-->
                        </section>
                    </div>
                </div>



                <div class="row">
                    <div class="col-sm-12 col-md-8">


                        {% set rowCards = ['card-lg', 'card-rec', 'card-rec'] %}                                                                
                        {% for i in 0..2 %}
                            {% if articles[i] %}                                                                
                                {{this.render('partials/_single-article.twig', {article: articles[articleCount], position: (articleCount+1), containerClass: rowCards[i]}) | raw}}
                                {% set articleCount = articleCount + 1 %}
                            {% endif %}
                        {% endfor %}

                    </div>
                    <div class="col-sm-12 col-md-4">
                        <section class="section-sidepanel-news">
                            <div class="row">
                                <div class="card-group">
                                {% set rowCards = ['card-sm s370x270', 'card-sm inverted s370x270'] %}                                                                
                                {% for i in 0..1 %}
                                    {% if articles[i] %}                                                                
                                        {{this.render('partials/_single-article.twig', {article: articles[i], position: (articleCount+1), containerClass: rowCards[i]}) | raw}}
                                        {% set articleCount = articleCount + 1 %}
                                    {% endif %}
                                {% endfor %}

                                </div><!-- .card-group-->
                            </div><!-- .row-->

                        </section>


                    </div><!-- .col-sm-4-->



                    <div class="col-sm-12">
                        <div class="row">
                            <div class="card-group">
                               
                            {% for i in 0..3 %}
                                {% if articles[i] %}                                                                
                                    {{this.render('partials/_single-article.twig', {article: articles[articleCount], position: (articleCount+1), containerClass: 'col-sm-3 card-sm s263x209'}) | raw}}
                                    {% set articleCount = articleCount + 1 %}
                                {% endif %}
                            {% endfor %}

                            </div><!-- .card-group-->
                        </div><!-- .row-->


                    </div><!-- .col-sm-12-->
                </div><!-- .row-->






            </div><!-- .container-->
        </section><!-- .home-page-content-->

