                            {# <img src="{{networkData.templatePath}}/static/images/engineroom-logo.svg?v=572" alt="{{parentItem.blogTitle}}"> #}
                        </a>
                    </li>
                {% endif  %}

            {% endfor %}
                    
        </ul>

    </div>






    <div class="site-header__bottom">
            


        {# **********************************************************
                                NEWSROOM LOGO
        ********************************************************** #}
