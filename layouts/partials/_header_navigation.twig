<header id="masthead" class="site-header container-fluid {# site-header-extra-padding #}">
        
    <div class="site-header-main">
            
        <div class="site-branding-top row">
            <div class="section-left col-md-6 col-lg-4 col-sm-6">
                <div class="social-links">
                    <ul>
                        <li><a href="#"><span class="sr-only">Facebook</span><span class="icon-facebook"></span></a></li>
                        <li><a href="#"><span class="sr-only">Twitter</span><span class="icon-twitter"></span></a></li>
                        <li><a href="#"><span class="sr-only">Instagram</span><span class="icon-instagram"></span></a></li>
                        <li><a href="#"><span class="sr-only">Vimeo</span><span class="icon-vimeo"></span></a></li>
                    </ul>
                </div><!-- .social-links-->

                <div class="secondary-menu">
                    <ul>
                        {% if not _User.isGuest() %}
                            {% set user = _User.getUser() %}
                            <li><a href="javscript:void(0)" class="" id="profile">
                                {{ (user.firstname ~" "~ user.lastname) | truncate(15) | title}}
                            </a></li>
                        {% else %}      
                            <li><a href="{{_AppHelper.getLoginUrl()}}">Login</a></li>
                        {% endif %}      


                        <li><a href="{{networkData.defaultBlogUrl}}">Home</a></li>
                        <li><a href="#">News</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Subscribe</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div><!-- .secondary-menu-->
            </div><!-- .menu-left-->  
            
            <div id="header__menu">
                <div class="profile__menu">
                     {% if user.profileMedia.id != '' %}
                            {% set profileImg = _Media.getMediaUrl(user.profileMedia, 80, 80, {radius: 'max', gravity: 'face', 'crop': 'thumb', type: 'user'}) %}
                        {% else %}
                            {% set profileImg = networkData.templatePath ~ "/static/images/icons/profile.svg" %}
                        {% endif %}
                  <div class="profile__menu-image" style="background-image: url({{ profileImg }})"></div>
                  <div class="profile__menu-content">
                    <div class="profile__menu-name">{{ (user.firstname ~" "~ user.lastname) | truncate(15) | title}}</div>
                    <div class="profile__menu-email">{{user.email | truncate(23)}}</div>
                    <a href="{{_AppHelper.buildUrl('user/my-news')}}" class="profile__menu-button">My News</a>
                  </div>
                  <ul class="profile__menu-navigation">
                      {% if _User.isAdminUser() %}
                          <li><a class="profile__menu-navigation-link" href="http://{{networkData.defaultDomain['domain']}}/admin" target="_blank">Admin</a></li>
                      {% endif %}
                      <li><a class="profile__menu-navigation-link" href="{{blogUrl}}/profile/{{user.username}}">View Profile</a></li>
                      <li><a class="profile__menu-navigation-link" href="http://{{networkData.defaultDomain['domain']}}/user/edit-profile">Settings</a></li>
                      <li><a class="profile__menu-navigation-link" href="{{_AppHelper.getLogoffUrl()}}">Sign Out</a></li>
                  </ul>
                </div>
            </div>








            <div class="section-right navbar-right col-md-6 col-lg-8 col-sm-2">
                <div class="rooms-link">
                    <ul>

                        {% set menuItems = blog.blogHeaderMenu %}
                        {% for i, parentItem in menuItems | slice(0, 4) %}
                            {% set activeClass = (parentItem.link == _AppHelper.getServerUrl()) ? 'active' : ''%}
                            {% set externalClass = (parentItem.isExternal) ? 'external-link' : '' %}

                            <li>
                                <a href="{{parentItem.link |raw}}" class="{{activeClass}} {{externalClass}}" {% if parentItem.target != "" %}target="{{parentItem.target}}"{% endif %}>
                                    <img src="{{networkData.templatePath}}/static/images/newsroom-{{parentItem.blogTitle | lower}}.jpg" alt="newsroom-{{parentItem.blogTitle}}">
                                </a>
                            </li>

                        {% endfor %}


{#                         <li><a href="#"><img src="{{networkData.templatePath}}/static/images/newsroom-viewingroom.jpg" alt="newsroom-viewingroom"></a></li>
                        <li><a href="#"><img src="{{networkData.templatePath}}/static/images/newsroom-livingroom.jpg" alt="newsroom-viewingroom"></a></li>
                        <li><a href="#"><img src="{{networkData.templatePath}}/static/images/newsroom-boardroom.jpg" alt="newsroom-viewingroom"></a></li>
                        <li><a href="#"><img src="{{networkData.templatePath}}/static/images/newsroom-sportsroom.jpg" alt="newsroom-viewingroom"></a></li>
 #}                    </ul>
                </div><!-- .rooms-link-->
                <a href="#" class="btn btn-primary pull-right">Press Patron Donations</a>
             </div>
        </div><!-- .site-branding-top -->


        <div class="site-branding-bottom row">
            <div class="section-left col-md-4 col-sm-6">
                <div class="logo pull-left">
                    <a class="navbar-brand" href="{{networkData.defaultBlogUrl}}" rel="Home" tabindex="-1" title="Home">
                        <img src="{{networkData.templatePath}}/static/images/newsroom-{{pageClass | lower}}-lrg.png" alt="logo" class="main-logo">
                        <img src="{{networkData.templatePath}}/static/images/newsroom-icon.png" alt="logo" class="mobile-logo">
                    </a>
                </div>
            </div><!--section-left-->

            <div class="section-right col-md-8 col-sm-6">
                <nav class="sb-custom-menu">
                    <ul id="menu-primary-menu" class="menu">
                        <li class="menu-item">
                            <a href="#">News</a>
                        </li>

                        <li class="menu-item nav-main-item">
                            <a href="#">Politics</a>
                        </li>
                
                        <li class="menu-item nav-main-item">
                            <a href="#">Technology</a>
                        </li>

                        <li class="menu-item nav-main-item">
                            <a href="#">Real Economy</a>
                        </li>

                        <li class="menu-item nav-main-item">
                            <a href="#">New Auckland</a>
                        </li>

                        <li class="menu-item nav-main-item">
                            <a href="#">Health & Science</a>
                        </li>

                        <li class="menu-item nav-main-item">
                            <a href="#">Environment</a>
                        </li>

                        <li id="menu-item-search" class="menu-item menu-item-search">
                            <a href="#" class="search-icon"><span class="icon-search icon"></span><span class="sr-only">Expand search</span></a>

                            <ul class="sub-menu normal-sub search-sub-menu">
                                <li class="search-container">
                                    <fieldset>
                                        <form method="get" id="searchform" action="#">
                                            <label for="header-search" class="assistive-text sr-only">Search</label>
                                            <input type="text" class="field" name="s" id="header-search" placeholder="Search" required="">
                                            <button class="btn btn-default" type="submit" id="searchsubmit">
                                                <span class="icon icon-search-blk"></span>
                                                <span class="screen-reader-text"></span>
                                            </button>
                                        </form>
                                    </fieldset>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>  
            </div><!--section-right-->
        </div><!-- .site-branding-bottom -->
    </div><!-- .site-header-main -->
</header>