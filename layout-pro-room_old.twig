{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData   = _Network.getNetworkData() %}
{% set blogData      = _Blog.getBlog() %}
{% set blogName      = blogData.title %}


{{this.registerJs("Acme.cards = CardController();")}}
{% set limit = 8 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set firstCount = articles | length %}

                                                     {# renders the card    fetch-limit      fetch-offset    infinite scroll #}
                                                     {#            ↑           ↑                 ↑            ↑            #}
{{this.registerJs("Acme.loadMore = new Acme.View.articleFeed(Acme.cards, " ~ limit ~ ", " ~ firstCount ~ ", false);")}}


<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = 0 %}

    
    <main id="main" class="site-main pro-room {{this.title | lower}}" role="main">
        <section class="featured-slider container-fluid">

                <div class="swiper-container">
                    <div class="swiper-wrapper">

                        {% if articles[0] %}                                                                
                            {{this.render('partials/_single-article.twig', {
                                article: articles[0], 
                                position: 1, 
                                containerClass: 'featured card-pro-feature card-pro-feature-tablet card-pro-feature-mobile', 
                                imageSize: {width:1168, height:587}
                            }) | raw}}
                            
                            {% set articleCount = articleCount + 1 %}
                        {% endif %}
                    </div>
                </div>
        </section>
    

        {% if articles[articleCount] %}
            <section class="top-stories">
                <div class="container">
                    <h2 class="u-margin-bottom-10">TOP STORIES</h2>
                    <div class="row">

                        {% for i in 0..2 %}
                            {% if articles[i] %}                                                                
                                {{this.render('partials/_single-article.twig', {
                                    article: articles[articleCount], 
                                    position: (articleCount+1), 
                                    containerClass: 'col-sm-4 card-top-story card-top-story-tablet card-top-story-mobile pro-card', 
                                    imageSize: {width:99, height:88}
                                }) | raw}}
                                {% set articleCount = articleCount + 1 %}
                            {% endif %}
                        {% endfor %}

                    </div>
                </div>
            </section>
        {% endif %}



        <section class="home-page-content">
            <div class="container">
                <div class="row">

                    <div class="col-sm-12 col-md-8">
                        <div class="card-group">
                            {% if articles[articleCount] %}                                                                

                                {% for i in 0..3 %}
                                    {% if articles[articleCount] %}                                                                
                                        {{this.render('partials/_single-article.twig', {
                                            article: articles[articleCount], 
                                            position: (articleCount+1), 
                                            containerClass: 'card-pro-rec card-pro-rec-tablet card-pro-rec-mobile', 
                                            imageSize: {width:330, height:236}
                                        }) | raw}}
                                        {% set articleCount = articleCount + 1 %}
                                    {% endif %}
                                    <hr class="divide15 visible-xs-block">
                                {% endfor %}
                            {% endif %}

                         </div>
                    
                    
                    {% if articles|length >= limit %}
                        {{ this.render('partials/ajaxarticles_new.twig', {
                            name            : "section-load",
                            limit           : limit,
                            offset          : limit,
                            label           : "Load more",
                            imgwidth        : "262",
                            imgheight       : "208",
                            container       : "mainAjaxArticles",
                            non_pinned      : articlesArr.existingNonPinnedCount, 
                            card_class      : "col-sm-12 card-pro-rec card-pro-rec-tablet card-pro-rec-mobile pro-rec-divide",
                            buttonClass     : "loadMoreArticles"
                        }) | raw }}
                    {% endif %}


                    
                    
                    </div>

                    <div class="col-sm-12 col-md-4 sidebar hidden-xs">
                        
                        <div class="row">
                        
                            <section class="col-sm-12 sidebar-news recent-articles u-no-margin-top">
                                <h3 class="most-viewed__header">MOST VIEWED</h3>
                                
                                {% set popularArticles = _Article.getPopularArticles({ 
                                        limit: 5, 
                                        blogId: blogData['id'], 
                                        interval: 168 
                                }) %}

                                
                                {% for i in 0..4 if popularArticles[i] %}
                                    {{this.render('/partials/_single-article.twig', {
                                        article         : popularArticles[i], 
                                        swap            : false,
                                        containerClass  : 'card-pro-popular', 
                                        imageSize: {width:141, height:113}
                                    }) | raw}}
                                {% endfor %} 

                            </section>
                        
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>