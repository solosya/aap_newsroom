<section class="room-investigations">
    <header>
        <a href="{{ sections['investigations'].link }}">
            <img src="{{networkData.templatePath}}/static/images/investigations-logo?ver=1.svg" alt="investigations" class="img-fluid">
        </a>
    </header>

    {{this.render('_single-article.twig', {
        article         : sections['investigations'].feed.articles[0],
        position        : 1, 
        containerClass  : 'card-featured-mobile card-featured2-tablet card-featured2-desktop card-featured2-desktop-up investigations', 
        imageSize       : {width:627, height:415},
        swap            : 'false'
    }) | raw}}

    <div class="articles">
        <div class="row">
            
            {% for i in 1..3 %}
                {% if sections['investigations'].feed.articles[i] %}        
                    {{this.render('_single-article.twig', {
                        article         : sections['investigations'].feed.articles[i], 
                        position        : i+1, 
                        containerClass  : 'subfeature-card-mobile subfeature-card-tablet subfeature-card-desktop-sm subfeature-card-desktop-lg investigations col-md-4', 
                        imageSize       : {width:92, height:100},
                        swap            : 'false'

                    }) | raw}}
                {% endif %}
            {% endfor %}

        </div><!-- .articles-->
    </div><!-- .row-->
</section><!--room-board-->