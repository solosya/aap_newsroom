 <section class="room-ideas">
     <header>
         <a href="{{ sections['ideasroom'].link }}">
             <img src="{{networkData.templatePath}}/static/images/ideasroom-logo.svg" alt="ideas room" class="img-responsive">
         </a>
     </header>

    {{this.render('_single-article.twig', {
        article: sections['ideasroom'].feed.articles[0], 
        position: 1, 
        containerClass: 'featured ideas', 
        imageSize: {width:1140, height:430},
        swap: 'false'
    }) | raw}}

     <div class="articles">
         
         <div class="row">
             
             {% for i in 1..2 %}
                 {% if sections['ideasroom'].feed.articles[i] %}        
                    {{this.render('_single-article.twig', {
                        article: sections['ideasroom'].feed.articles[i], 
                        position: i+1, 
                        containerClass: 'col-sm-12 col-md-6', 
                        imageSize: {width:203, height:129},
                        swap: 'false'
                    }) | raw}}
                 {% endif %}
             {% endfor %}

         </div><!-- .row-->
     </div>
 </section><!--room-sports-->
