

<section class="featured-slider-comments container u-tablet-margin-top-40 u-desktop-margin-top-40">
    <div class="row">
        <div class="col-sm-12 col-md-8">
            <div class="row">
                {% if articles[0] %}                                                                
                    {{this.render('_single-article.twig', {
                        article: articles[0], 
                        position: 1, 
                        containerClass: 'col-sm-12 feature', 
                        imageSize: {width:1168, height:587}
                }) | raw}}
                {% endif %}
            </div>
            <div class="newsroom-icon">
                <img src="{{networkData.templatePath}}/static/images/nr-logo-reverse.svg" alt="newsroom ic">
            </div>
        </div>


        <div class="cold-sm-12 col-md-4">
            <div class="row top-stories-comments">
                {% for i in 1..3 %}
                    {% if articles[i] %}                                                                
                        {{this.render('_single-article.twig', {
                            article: articles[i], 
                            position: (i+1), 
                            containerClass: 'col-sm-12 card-top-story card-top-story-tablet card-top-story-mobile opinion', 
                        imageSize: {width:633, height:428}
                        }) | raw}}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>
    