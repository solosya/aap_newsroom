<section class="room-reading">
    <header class="row">
        <a href="{{ sections['readingroom'].link }}" class="col-sm-6 col-xs-12">
            <img src="{{networkData.templatePath}}/static/images/readingroom-logo.svg" alt="reading room" class="img-fluid room-logo">
        </a>
    </header>

{{this.render('_single-article.twig', {
    article: sections['readingroom'].feed.articles[0], 
    containerClass: 'card-featured-mobile card-featured2-tablet card-featured2-desktop card-featured2-desktop-up reading', 
    imageSize: {width:1140, height:430},
    swap: 'false'
}) | raw}}

    <div class="articles">
        
        <div class="row">
            
            {% for i in 1..2 %}
                {% if sections['readingroom'].feed.articles[i] %}        
                {{this.render('_single-article.twig', {
                    article: sections['readingroom'].feed.articles[i], 
                    containerClass: 'col-md-12 col-lg-6 card-sub-featured-mobile card-sub-featured-tablet card-sub-featured-desktop card-sub-featured-desktop-up reading', 
                    imageSize: {width:203, height:129},
                    swap: 'false'
                }) | raw}}
                {% endif %}
            {% endfor %}

        </div><!-- .row-->
    </div>
</section><!--room-sports-->
