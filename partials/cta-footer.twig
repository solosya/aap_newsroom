<div class="c-cta-footer {{extraClass}}">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-2 col-xl-2">
                    <img class="c-cta-footer__logo d-md-none d-lg-block" src="{{networkData.templatePath}}/static/images/daily-briefing-cta.svg" alt="Daily Briefing">
					<img class="c-cta-footer__logo d-none d-md-block d-lg-none" src="{{networkData.templatePath}}/static/images/daily-briefing-cta-logo-stack.svg" alt="Daily Briefing">
                </div>
                <div class="col-12 col-md-3 col-xl-5 j-cta-footer-curation">
                    <p class="c-cta-footer__tagline">Start your day with a curation of <br class="d-md-none" />our top stories in your inbox</p>
                </div>

                <div class="col-12 col-md-7 col-xl-5 j-cta-footer-buttons">
                    {% if config['mailchimp']['ctalink'] is defined %}
                        <a href="{{config['mailchimp']['ctalink']}}" target="_blank"><div class="c-cta-footer__button c-cta-footer__buttonblack">READ TODAY'S NEWSLETTER</div></a>
                    {% endif %}
                    <div class="c-cta-footer__button c-cta-footer__buttonblue j-cta-footer-signtoggle">SIGN UP FOR FREE</div>
                </div>
                        
                        
                <div class="col-12 col-md-4 col-xl-4 d-none j-cta-footer-form">
                        <!-- Begin MailChimp Signup Form -->
                        <div id="mc_embed_signup" class="c-cta-footer__container" >
                            <form   action="//newsroom.us14.list-manage.com/subscribe/post?u=e0ae259e8f9472b9c54037c25&amp;id=71de5c4b35" 
                                    method="post" id="mc-embedded-subscribe-form_footer" 
                                    name="mc-embedded-subscribe-form" 
                                    class="validate" 
                                    target="_blank" 
                                    novalidate 
                                    style="background-color:white">
                                <div id="mc_embed_signup_scroll" style="display:flex">
                            
                                    <div class="mc-field-group c-cta-footer__input" style="">
                                    {# <label for="mce-EMAIL">Email Address </label> #}
                                        <input type="email" value="" name="EMAIL" class="c-cta-footer__email required " id="mce-EMAIL_footer" placeholder="Enter your email" style="color:black; border:none">
                                        <input type="hidden" class="u-hide" value="1" name="group[3][1]" id="mce-group[3]-3-0">
                                    </div >
                                    <div id="mce-responses" class="clear">
                                        <div class="response" id="mce-error-response" style="display:none"></div>
                                        <div class="response" id="mce-success-response" style="display:none"></div>
                                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_e0ae259e8f9472b9c54037c25_71de5c4b35" tabindex="-1" value=""></div>
                                    <button type="submit" value=" " name="subscribe" id="mc-embedded-subscribe_footer" class="c-cta-footer__submit tag-register-button"  aria-label="Newsletter subscribe"></button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div><!-- .col-sm-6-->
            </div>
        </div>
    </div>