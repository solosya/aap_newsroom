<section class="room-locker">
    <header>
        <a href="{{ sections['lockerroom'].link }}">
            <img src="{{networkData.templatePath}}/static/images/lockerroom-logo.svg" alt="locker room" class="img-fluid">
        </a>
        <p class=" room-locker__header__text d-none d-lg-block">Home of women in sport</p>
        <p class=" room-locker__header__text d-block d-lg-none">Women in sport</p>
    </header>


    {{this.render('_single-article.twig', {
        article         : sections['lockerroom'].feed.articles[0],
        containerClass  : 'card-featured-mobile card-featured2-tablet card-featured2-desktop card-featured2-desktop-up locker', 
        imageSize       : {width:627, height:415},
        swap            : 'false'
    }) | raw}}

    <div class="articles">
        <div class="row">
            
            {% for i in 1..3 %}
                {% if sections['lockerroom'].feed.articles[i] %}        
                    {{this.render('_single-article.twig', {
                        article         : sections['lockerroom'].feed.articles[i], 
                        containerClass  : 'subfeature-card-mobile subfeature-card-tablet subfeature-card-desktop-sm subfeature-card-desktop-lg locker col-md-4', 
                        imageSize       : {width:92, height:100},
                        swap            : 'false'

                    }) | raw}}
                {% endif %}
            {% endfor %}

        </div><!-- .articles-->
    </div><!-- .row-->
</section><!--room-board-->