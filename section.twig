<section class="featured-slider channel container-fluid u-margin-top-40" data-test="section">
    <div class="container u-mobile-no-padding">

        {% if 'futurelearning' != blogData.title | lower %}
            <h1 class="sectionpage u-mobile-margin-left-20">{{blogData.title}}</h1>
            
            {% if blogData.title | lower == 'technology' %}
                <div class="catalyst-section catalyst-section__channel">
                    <img class="catalyst-section__chalogo" src="{{networkData.templatePath}}/static/images/logos/catalyst_bw.png?v=1">
                    <p class="catalyst-section__chatext">In association with</p>
                </div>
            {% endif %}
        {% endif %}


        <div class="swiper-container u-mobile-margin-top-20  u-mobile-margin-left-minus-15 u-mobile-margin-right-minus-15">
            <div class="swiper-wrapper">

                {% if articles[0] %}                                                                
                    {{this.render('partials/_single-article.twig', {
                        article: articles[0], 
                        position: 1, 
                        lazyload:false,
                        containerClass: 'swiper-slide',
                        imageSize: {width:660, height:440}
                    }) | raw}}
                    {% set articleCount = articleCount + 1 %}
                {% endif %}
            </div>

        </div>
    </div>
</section>

